# Scanner ULTRA v5.0.0 â€” Environment Configuration
# Copy this file to .env and fill in values

# --- Core ---
SCANNER_ENV=development
SCANNER_DEBUG=false
SCANNER_LOG_LEVEL=INFO

# --- Authentication ---
SCANNER_SECRET_KEY=change-this-to-a-secure-random-string
SCANNER_API_KEY=change-this-to-a-secure-random-string
SCANNER_ADMIN_PASSWORD=change-this

# --- Server ---
SCANNER_HOST=0.0.0.0
SCANNER_PORT=8000
SCANNER_CORS_ORIGINS=*

# --- Database ---
DATABASE_URL=postgresql+asyncpg://scanner:scanner@localhost:5432/scanner

# --- Redis ---
REDIS_URL=redis://localhost:6379/0

# --- S3 / MinIO ---
S3_ENDPOINT_URL=http://localhost:9000
S3_BUCKET_NAME=scanner-scans
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# --- Vector DB (Qdrant) ---
QDRANT_URL=http://localhost:6333

# --- Model / Inference ---
SCANNER_WEIGHTS_DIR=./weights
SCANNER_DEVICE=auto
SCANNER_MAX_UPLOAD_SIZE=524288000

# --- Rate Limiting ---
SCANNER_RATE_LIMIT=50

# --- Cache ---
SCANNER_CACHE_TTL=86400

# --- Scan ---
SCANNER_DETECTOR_TIMEOUT=30
